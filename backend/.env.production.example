# Production Environment Variables for Render

# Environment
NODE_ENV=production
PORT=5000

# MongoDB Atlas (You'll need to create a free cluster at https://cloud.mongodb.com)
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@cluster0.xxxxx.mongodb.net/creative-approach?retryWrites=true&w=majority

# JWT Secret (Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=GENERATE_A_SECURE_RANDOM_STRING_HERE

# Email Configuration (Use SendGrid for production)
EMAIL_SERVICE=gmail
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=Creative Approach <noreply@creativeapproach.gh>

# Admin Configuration
ADMIN_EMAIL=admin@creativeapproach.gh
ADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Client URLs (Update after deploying frontend)
CLIENT_URL=https://your-frontend-app.onrender.com
ADMIN_URL=https://your-admin-dashboard.onrender.com

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=GENERATE_ANOTHER_SECURE_RANDOM_STRING
