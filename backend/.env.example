# Environment Variables
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/creative-approach
# For production, use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/creative-approach

# JWT Secret (Generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-123456789

# Email Configuration (Use SendGrid, Gmail, or your email service)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=Creative Approach <noreply@creativeapproach.gh>

# Admin Configuration
ADMIN_EMAIL=admin@creativeapproach.gh
ADMIN_PASSWORD=Admin@123456

# Client URL (for CORS)
CLIENT_URL=http://localhost:3001
ADMIN_URL=http://localhost:3002

# Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
